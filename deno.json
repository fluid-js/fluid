{
    "name": "@fluid/core",
    "version": "1.0.4",
    "exports": {
        ".": "./src/main.ts",
        "./server": "./src/ssr.ts"
    },
    "compilerOptions": {
        "lib": [
            "deno.window",
            "ESNext",
            "DOM"
        ]
    },
    "tasks": {
        "dev": "deno run --allow-env --allow-read --allow-run scripts/build.ts",
        "build": "deno run --allow-env --allow-read --allow-run scripts/build.ts --no-dev"
    },
    "exclude": ["test", "dev", "dist", "_src_old"]
}